@model List<GULLEM_NEW_MVC.Entities.UserType>

<div class="user-type-container">
    <h1>USER TYPE</h1>

    <a class="btn btn-success" href="new/create">Create User</a>

    <div class="table-container-create">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Book in Model)
                {
                    <tr>
                        <td>@Book.Id </td>
                        <td>@Book.Name </td>
                        <td>
                            <a class="btn btn-warning Btn" href="new/update/@Book.Id">Update</a>
                            <a class="btn btn-danger Btn" href="new/delete/@Book.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>